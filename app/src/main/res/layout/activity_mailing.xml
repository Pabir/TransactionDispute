<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Templates"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#03A9F4" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvEmailStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select an email template below"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="#E1F5FE"
            android:textColor="#01579B" />

        <!-- Machine Related Issues -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFEBEE">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ–¨ï¸ Machine Related Issues"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ATM machine faults, card reader issues, cash dispense problems"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnMachineIssues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Machine Issue Report"
                    android:backgroundTint="#F44336" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- UPS & Battery Related -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFF3E0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”‹ UPS Battery Related"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Power backup issues, battery replacement, UPS maintenance"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnUpsBattery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send UPS/Battery Report"
                    android:backgroundTint="#FF9800" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Network & Link Related -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ Network Link Related"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Internet connectivity, network downtime, link failures"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnNetworkLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Network Issue Report"
                    android:backgroundTint="#2196F3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Room & Infrastructure -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E8F5E8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ  Room Infrastructure"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room maintenance, AC issues, cleaning, infrastructure problems"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnRoomInfrastructure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Infrastructure Report"
                    android:backgroundTint="#4CAF50" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Transaction Disputes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F3E5F5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³ Transaction Disputes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Failed UPI transactions, amount disputes, customer complaints"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTransactionDisputes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Transaction Dispute"
                    android:backgroundTint="#9C27B0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Cash Management -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFF8E1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Cash Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash loading reports, reconciliation, note counting issues"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnCashManagement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Cash Report"
                    android:backgroundTint="#FFC107" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E0F2F1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnOpenGmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open Gmail App"
                    android:backgroundTint="#009688" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Sk Pabirul Islam"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

</ScrollView>