<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#f5f5f5"
     android:padding="16dp">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="24dp"
             android:gravity="center"
             android:textSize="24sp"
             android:textColor="#03A9F4"
             android:text="Email Templates"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="24dp"
             android:gravity="center"
             android:background="#E1F5FE"
             android:padding="12dp"
             android:textSize="14sp"
             android:textColor="#01579B"
             android:id="@+id/tvEmailStatus"
             android:text="Select an email template below" />

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#E8F5E8"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸ“‹ EOD Docket Request"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="Request EOD docket for cash reconciliation and daily settlement" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#4CAF50"
                     android:id="@+id/btnEodDocketRequest"
                     android:text="Request EOD Docket" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#FFEBEE"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸ–¨ï¸ Machine Related Issues"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="ATM machine faults, card reader issues, cash dispense problems" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#F44336"
                     android:id="@+id/btnMachineIssues"
                     android:text="Send Machine Issue Report" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#FFF3E0"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸ”‹ UPS Battery Related"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="Power backup issues, battery replacement, UPS maintenance" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#FF9800"
                     android:id="@+id/btnUpsBattery"
                     android:text="Send UPS/Battery Report" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#E3F2FD"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸŒ Network Link Related"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="Internet connectivity, network downtime, link failures" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#2196F3"
                     android:id="@+id/btnNetworkLink"
                     android:text="Send Network Issue Report" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#FCE4EC"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸ  Room Infrastructure"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="Room maintenance, AC issues, cleaning, infrastructure problems" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#E91E63"
                     android:id="@+id/btnRoomInfrastructure"
                     android:text="Send Infrastructure Report" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#F3E5F5"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸ’³ Transaction Disputes"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="Failed UPI transactions, amount disputes, customer complaints" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#9C27B0"
                     android:id="@+id/btnTransactionDisputes"
                     android:text="Send Transaction Dispute" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#FFF8E1"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="8dp"
                     android:textSize="18sp"
                     android:text="ðŸ’° Cash Management"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="12sp"
                     android:text="Cash loading reports, reconciliation, note counting issues" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#FFC107"
                     android:id="@+id/btnCashManagement"
                     android:text="Send Cash Report" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:elevation="4dp"
             android:radius="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="#E0F2F1"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="12dp"
                     android:textSize="18sp"
                     android:text="âš¡ Quick Actions"
                     android:textStyle="bold" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:backgroundTint="#009688"
                     android:id="@+id/btnOpenGmail"
                     android:text="Open Gmail App" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="end"
             android:textSize="12sp"
             android:layout_marginTop="24dp"
             android:text="Developed by Sk Pabirul Islam"
             android:textStyle="italic" />

    </LinearLayout>

</ScrollView>