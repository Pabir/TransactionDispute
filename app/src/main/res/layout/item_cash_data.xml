<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIndentAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indent Amount"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv500Notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500 Notes"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv200Notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200 Notes"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv100Notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 Notes"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEodReceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EOD Received"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEod500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EOD 500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEod200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EOD 200"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEod100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EOD 100"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvLoadingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading Time"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLoadAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Load Amount"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEodAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EOD Amount"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDueAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due Amount"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>