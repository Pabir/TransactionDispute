<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Dispute Types"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="#2196F3" />

        <!-- UPI Transaction Dispute Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_upi"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“±"
                    android:textSize="40sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPI Transaction Dispute"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report failed UPI transactions, QR code issues, and UPI payment disputes"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#E3F2FD"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/btnUpiDispute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report UPI Issue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_white_outline"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card Transaction Issue Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³"
                    android:textSize="40sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card Transaction Issue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report debit/credit card issues, card swallowing, PIN problems, and card payment disputes"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#E8F5E8"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/btnCardDispute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report Card Issue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_white_outline"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ UPI Disputes: For QR code scans, UPI ID transactions, and mobile payment issues\n\nâ€¢ Card Disputes: For debit/credit card transactions, card swallowing, and PIN-related problems\n\nâ€¢ Select the appropriate option based on your transaction type"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Sk Pabirul Islam"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

</ScrollView>